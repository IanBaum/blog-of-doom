{{#if updatePostForm}}
  <h4>Update {{post.post}}</h4>

  <div>
      <form>
        <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
        </div>

        <div class="form-group">
        <label for="date">Date</label>
        {{input value=type id="type" placeholder=post.date}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=city id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <div class="form-group">
        <label for="content">Image URL</label>
        {{input value=content id="content" placeholder=post.content}}
      </div>

        <button {{action 'update' post}}>Save</button>
      </form>
  {{else}}
        <button {{action 'updatePostForm'}}>Update</button>
  {{/if}}
